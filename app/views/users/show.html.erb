<h1><%= @user.first_name %>'s Profile Page</h2>



<div id="all_things">

	<div id= "events_nav">
		<!-- <fieldset id="events_nav"> -->
		<legend><h2>Events</h2></legend>
		<span class = "add"><%= link_to "+", new_event_path, class:"new"%></span>
		<% @events.each do |event|%>
			<tr>
			    <td><%= link_to event.name, event_path(event) %></td><br>
			    <td><%= event.description %></td>
			    <td><%= link_to "Show", event %></td>
			    <td><%= link_to "Edit", edit_event_path(event) %></td>
			    <td><%= link_to "Remove", event, method: :delete, data: { confirm: "Are you sure?" } %></td>
	  		</tr> <br><br>
	  	<%end%>
			<!-- </fieldset> -->
	</div>


	<div id="bills_nav">
	<!-- <fieldset id="events_nav"> -->
		<legend><h2>Bills</h2></legend>
		<span class = "add"><%= link_to "+", "/bills/new", class:"new"%></span>
		<% @bills.each do |bill|%>
		<tr>
		    <td><%= link_to bill.title, bill_path(bill) %></td><br>
		    <td><%= bill.description %></td>
		    <td><%= link_to "Show", bill %></td>
		    <td><%= link_to "Edit", edit_bill_path(bill) %></td>
		    <td><%= link_to "Remove", bill, method: :delete, data: { confirm: "Are you sure?" } %></td>
	  	</tr> <br><br>
		<%end%>
	<!-- </fieldset> -->
	</div>


	<div id= "chores_nav">

		<h2>Chores</h2>
			<span class = "add"><%= link_to "+", new_chore_path, class:"new"%></span>
			<ul>
				<% @chores.each do |chore|%>
				<% if current_user.id == chore.creator_id %>
					<li class= "creator item"><%= link_to chore.name, "/chores/#{chore.id}" %><br>
				<% elsif current_user.participating_in_chore?(chore.id) %>
					<li class="participating item"><%= link_to chore.name, "/chores/#{chore.id}" %><br>
				<% else %>
					<li class="item"><%= link_to chore.name, "/chores/#{chore.id}"%><br>
					
				<% end %>
					<%=chore.description%><br>
					<%=chore.happen_at%><br>
				</li><br>
				<%end%>
			</ul>
	</div>
	
</div>
