<h1><%= @user.first_name %>'s Profile Page</h2>

<div class="all_things">

	<div id="bills_nav">
		<h2>Bills</h2>
		<h3><%= link_to "Create new bill", "/bills/new" %></h3><br>
		<% @bills.each do |bill|%>
		<tr>
		    <td><%= bill.title %></td>
		    <td><%= bill.description %></td>
		    <td><%= link_to "Show", bill %></td>
		    <td><%= link_to "Edit", edit_bill_path(bill) %></td>
		    <td><%= link_to "Remove", bill, method: :delete, data: { confirm: "Are you sure?" } %></td>
	  	</tr> <br><br>
		<%end%>
	</div>

	<div id= "events_nav">
		<h2>Events</h2>
		<ul>
			<% @events.each do |event|%>
			<li><%= link_to event.name, "/events/#{event.id}" %><br>
				<%=event.description%><br>
				<%=event.happen_at%><br>
			<%end%>
			</li>
		</ul>
	</div>

	<div id= "chores_nav">
		<h2>Chores</h2>
		<ul>
			<% @chores.each do |chore|%>
			<li><%= link_to chore.name, "/chores/#{chore.id}" %><br>
				<%=chore.description%><br>
				<%=chore.happen_at%><br>
			<%end%>
			</li>
		</ul>
	</div>
	
</div>
